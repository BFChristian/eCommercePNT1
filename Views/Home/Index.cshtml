@{
    ViewData["Title"] = "Página de Inicio";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f7fa; /* Fondo gris claro */
        color: #333;
    }

    .features {
        display: flex;
        justify-content: space-around;
        text-align: center;
        padding: 50px 20px;
    }

    .feature {
        flex: 1;
        margin: 0 10px;
        background-color: #ffffff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .feature h2 {
            color: #4CAF50; /* Verde */
            margin-bottom: 10px;
        }

        .feature p {
            font-size: 1em;
            color: #555;
            line-height: 1.6;
        }
</style>

<div class="features">
    <div class="feature">
        <h2>Gestión de Productos</h2>
        <p>Administra tu catálogo, actualiza precios y mantén todo organizado.</p>
    </div>
    <div class="feature">
        <h2>Gestión de Usuarios</h2>
        <p>Controla a tus clientes y administra sus datos de manera segura.</p>
    </div>
    <div class="feature">
        <h2>Gestión de Compras</h2>
        <p>Consulta y organiza las compras realizadas en tu tienda.</p>
    </div>
</div>

