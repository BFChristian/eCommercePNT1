@model IEnumerable<eCommerce.Models.Compra>

@{
    ViewData["Title"] = "Compras";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h4">Lista de Compras</h1>
        <a asp-action="Create" class="btn btn-success">Crear Nueva Compra</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Usuario)</th>
                        <th>@Html.DisplayNameFor(model => model.Producto)</th>
                        <th>@Html.DisplayNameFor(model => model.FechaCompra)</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Usuario.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.Producto.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.FechaCompra)</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

