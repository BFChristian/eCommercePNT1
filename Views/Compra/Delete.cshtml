@model eCommerce.Models.Compra

@{
    ViewData["Title"] = "Eliminar Compra";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h4">Eliminar Compra</h1>
        <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">¿Está seguro de que desea eliminar esta compra?</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Usuario)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Usuario.Id)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Producto)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Producto.Id)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FechaCompra)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FechaCompra)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-end">
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                </div>
            </form>
        </div>
    </div>
</div>

