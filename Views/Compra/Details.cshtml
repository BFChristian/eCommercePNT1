@model eCommerce.Models.Compra

@{
    ViewData["Title"] = "Detalles de Compra";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h4">Detalles de la Compra</h1>
        <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">Información de la Compra</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Usuario)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Usuario.Id)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Producto)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Producto.Id)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.FechaCompra)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FechaCompra)
                </dd>
            </dl>

            <div class="d-flex justify-content-end">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary me-2">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
            </div>
        </div>
    </div>
</div>

