@model eCommerce.Models.Compra

@{
    ViewData["Title"] = "Crear Compra";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h4">Nueva Compra</h1>
        <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">Detalles de la Compra</h4>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="UsuarioId" class="form-label">Usuario</label>
                    <select asp-for="UsuarioId" class="form-select" asp-items="ViewBag.UsuarioId"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="ProductoId" class="form-label">Producto</label>
                    <select asp-for="ProductoId" class="form-select" asp-items="ViewBag.ProductoId"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="FechaCompra" class="form-label">Fecha de Compra</label>
                    <input asp-for="FechaCompra" class="form-control" type="date" />
                    <span asp-validation-for="FechaCompra" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <input type="submit" value="Crear Compra" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

