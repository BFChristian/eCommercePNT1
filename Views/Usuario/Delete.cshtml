@model eCommerce.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h1 class="h4 mb-0">Eliminar Usuario</h1>
        </div>
        <div class="card-body">
            <h3 class="text-warning">¿Está seguro de que desea eliminar este usuario?</h3>
            <p class="text-muted">Esta acción no se puede deshacer.</p>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Nombre</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3 fw-bold">Apellido</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Apellido)</dd>

                <dt class="col-sm-3 fw-bold">Correo</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Correo)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-start mt-4">
                    <button type="submit" class="btn btn-danger me-2">Eliminar</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>
